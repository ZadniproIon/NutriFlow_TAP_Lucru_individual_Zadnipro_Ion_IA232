<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.myapp.nutrition.ui.QuickAddController"
      stylesheets="@styles/style.css">

    <Label text="Quick Add — introduce macronutrienții:"/>

    <HBox spacing="8">
        <Label text="Proteine (g):" />
        <TextField fx:id="tfProtein" promptText="Ex: 60"/>
    </HBox>

    <HBox spacing="8">
        <Label text="Carbohidrați (g):" />
        <TextField fx:id="tfCarbs" promptText="Ex: 75"/>
    </HBox>

    <HBox spacing="8">
        <Label text="Grăsimi (g):" />
        <TextField fx:id="tfFats" promptText="Ex: 10"/>
    </HBox>

    <HBox spacing="10">
        <Button text="OK"     onAction="#onSubmit"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>

</VBox>
